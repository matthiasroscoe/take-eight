<!doctype html>
<html>
<head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }} <!-- Header hook for plugins -->
    {{ 'application.scss.css' | asset_url | stylesheet_tag }}
    {{ 'application.js' | asset_url | script_tag }}
</head>
<body>

  <header class="header">
      <div class="header__menu">
        <div class="header__menu-inner">
          <span>m</span>
          <span>e</span>
          <span>n</span>
          <span>u</span>
        </div>
      </div>

      <div class="header__logo">
        <img src="" alt="">
      </div>

      <div class="header__right">
          <div class="header__cart">
              <a href="/cart">
                  <span class="text">CART</span>
                  <span class="count js-cart-count"></span>
              </a>
          </div>

          {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <a href="/account">account</a>
              {{ 'log out'  | customer_logout_link }}
            {% else %}
              {{ 'log in ' | customer_login_link }}
              {{ 'register' | customer_register_link }}
            {% endif %}
          {% endif %}
      </div>
  </header>

  <section class="hw-imgtxt">
      <div class="container">
          <div class="row">
              <div class="hw-imgtxt__text | col-lg-6">
                  <h1>Lorem ipsum</h1>
                  <p>Dolor sit amet. Adipiscing consectetur elit.</p>
                  <!-- link or arrow -->
              </div>
              <div class="hw-imgtxt__img col-lg-6 d-none d-lg-block">
                  <img src="" alt="">
              </div>
          </div>
      </div>
  </section>


  

  <main role="main">
    {{ content_for_layout }}
  </main>
</body>
</html>
