
<section class="nav">
    <div class="nav__top container">
        <div class="row">
            <div class="col-12">
                <div class="nav__top-inner js-toggle-nav">
                    <span class="letter letter--1">b</span>
                    <span class="letter letter--2">a</span>
                    <span class="letter letter--3">c</span>
                    <span class="letter letter--4">k</span>
                  </div>
            </div>
        </div>
    </div>
    <div class="nav__main container">
        <div class="nav__primary-menu">
            {% for link in linklists.main-menu.links %}
                {% assign child_list_handle = link.title | handleize %}
                {% if linklists[child_list_handle].links != blank %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                    [{% for childlink in linklists[child_list_handle].links %}
                    <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                    {% endfor %}]
                {% else %}
                    <a href="{{ link.url }}">{{ link.title }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="nav__image">
        <img class="u__img-fluid" src="https://cdn.shopify.com/s/files/1/0482/7077/0326/files/Fresh_sheet_feeling_-_priscilla-du-preez--R2uNyGmeM4-unsplash.jpg?v=1604995123" alt="Take Eight">
    </div>
</section>
